generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  nome  String
  email String @unique
  senha String
  nivel Int
  xp    Int

  tasks Task[] // <-- RELAÇÃO COM Task
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  priority    String
  dueDate     DateTime
  category    String
  status      String   @default("pending")
  xp          Int
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
